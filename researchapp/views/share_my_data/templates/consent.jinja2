{% extends "base.jinja2" %}

{% block jumbotron %}
<h1>Found {{ practitioner.name }}</h1>
{% endblock %}

{% block body %}
<div>
    <form action="{{ authorize_url }}" id="authorize-form">
        <input type="hidden" name="client_id" value="{{ client_id }}" />
        <input type="hidden" name="response_type" value="code" />
        <input type="hidden" name="scope" value="{{ practitioner.scope }}" />
        <input type="hidden" name="redirect_uri" value="{{ redirect_uri }}" />
        <input type="hidden" name="state" value="{{ state }}" />
        <input type="hidden" name="aud" value="{{ practitioner.fhir_url }}" />

        <button type="submit" class="btn btn-primary btn-lg">Share my electronic health records &raquo;</button>
    </form>

    <h2>What does this mean?</h2>
    <p>[consent language here]</p>
</div>
{% endblock %}
